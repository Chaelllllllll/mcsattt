<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen px-4">
    <!-- Registration Container -->
    <div class="mt-3 mb-3 w-full max-w-sm p-6 bg-white shadow-lg rounded-lg">
        <h2 class="text-2xl font-bold mb-6 text-center">Register</h2>

        <% if (message) { %>
            <div id="message" 
                 class="p-3 rounded-lg shadow-lg mb-4 
                 <%= type === 'success' ? 'bg-green-500' : 'bg-red-500' %> 
                 text-white transition-opacity duration-1000">
                <p><%= message %></p>
            </div>
        <% } %>

        <!-- Registration Form -->
        <form action="/register" method="POST" class="space-y-4">
            <!-- Name Field -->
            <div>
                <label for="name" class="block text-sm font-semibold">Name</label>
                <input 
                    type="text" 
                    name="name" 
                    id="name" 
                    class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    required>
            </div>

            <!-- Email Field -->
            <div>
                <label for="email" class="block text-sm font-semibold">Email</label>
                <input 
                    type="email" 
                    name="email" 
                    id="email" 
                    class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    required>
            </div>

            <!-- Password Field -->
            <div>
                <label for="password" class="block text-sm font-semibold">Password</label>
                <input 
                    type="password" 
                    name="password" 
                    id="password" 
                    class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    required>
            </div>

            <!-- Class Type Field -->
            <div>
                <label for="classType" class="block text-sm font-semibold">Class Type</label>
                <select 
                    name="classType" 
                    id="classType" 
                    class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    required>
                    <option value="morning">Morning</option>
                    <option value="afternoon">Afternoon</option>
                </select>
            </div>

            <!-- Submit Button -->
            <button 
                type="submit" 
                class="w-full bg-yellow-500 text-white py-2 rounded-md font-semibold hover:bg-yellow-600 transition">
                Register
            </button>
        </form>

        <!-- Login Link -->
        <p class="mt-6 text-center text-sm">
            Already have an account? 
            <a href="/login" class="text-yellow-500 hover:underline">Login</a>
        </p>
    </div>
</body>
</html>
